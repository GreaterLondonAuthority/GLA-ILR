<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet id="45" author="ybouhass">
    <dropPrimaryKey tableName="supplementary_data"/>

    <addColumn tableName="supplementary_data">
      <column name="year" type="INT4"/>
    </addColumn>

    <sql>update supplementary_data set year = 2019</sql>

    <addNotNullConstraint tableName="supplementary_data" columnName="year"/>

    <addPrimaryKey tableName="supplementary_data" columnNames="ukprn, year, learner_reference_number"/>
  </changeSet>

</databaseChangeLog>
